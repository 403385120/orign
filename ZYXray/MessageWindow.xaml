<Window x:Class="ZYXray.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZYXray"
        mc:Ignorable="d"
        Title="MessageWindow" WindowState="Normal" WindowStyle="None" ResizeMode="NoResize" Topmost="True" Left="0.0" Top="0.0" 
        Width="1920" Height="1080" Background="Red" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Name="WarnLabel" Width="1400" Height="200" FontSize="150" Foreground="Yellow" Content="F098/099风险！！！" Margin="150,100,150,700"></Label>
        <TextBlock Name="MessageTextBlock" Width="1400" Height="300" FontSize="60" Foreground="Blue" Margin="150,350,150,250" TextWrapping="Wrap"></TextBlock>
        <Button Background="White" FontSize="50" Width="200" Height="100" Content="确认" Click="Button_Click" Margin="750,750,750,150" Focusable="True"></Button>
    </Grid>
</Window>
