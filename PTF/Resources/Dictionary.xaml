    <Style x:Key="EffectButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Control.Foreground" Value="White"/>
        <Setter Property="Control.FontSize" Value="18"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Rectangle Fill="#FF0292F9" RadiusY="6.7" RadiusX="6.7" Width="100" Height="30" >
                            <Rectangle.Effect>
                                <DropShadowEffect />
                            </Rectangle.Effect>
                        </Rectangle>
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True"/>
                        <Trigger Property="IsDefaulted" Value="True"/>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True"/>
                        <Trigger Property="IsEnabled" Value="False"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="StationButtonStyle2" TargetType="{x:Type Button}">
        <Setter Property="Control.Foreground" Value="White"/>
        <Setter Property="Control.FontSize" Value="18"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}" >
                    <Border x:Name="borderColor" BorderBrush="{TemplateBinding Control.BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="5,5,5,5" Width="160" Height="40" >
                        <Border.Effect>
                            <DropShadowEffect/>
                        </Border.Effect>
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}"   HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=StationState}" Value="greenState">
                            <Setter TargetName="borderColor" Property="Background" Value="#FF03F93B"/>
                            <Setter TargetName="borderColor" Property="BorderBrush" Value="#FF03F93B"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=StationState}" Value="redState">
                            <Setter TargetName="borderColor" Property="Background" Value="#FFFF0000"/>
                            <Setter TargetName="borderColor" Property="BorderBrush" Value="#FFFF0000"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=StationState}" Value="yellowState">
                            <Setter TargetName="borderColor" Property="Background" Value="yellow"/>
                            <Setter TargetName="borderColor" Property="BorderBrush" Value="yellow"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="PLCButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <StackPanel Orientation="Horizontal" >
                        <Image Name="imageClose" Source="{Binding Property}" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=PLCState}" Value="NG">
                            <Setter Property="Source" Value="/Assets/PLCNG.png" TargetName="imageClose"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=PLCState}" Value="OK">
                            <Setter Property="Source" Value="/Assets/PLCOK.png" TargetName="imageClose"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
